
@{
    ViewBag.Title = "Promociones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Mantenimiento</a></li>
    <li class="breadcrumb-item active">Promociones</li>
</ol>

<div class="card m-lg-4">
    <div class="card-header">
        <i class="fas fa-boxes me-1"></i>Lista de Cupones
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <button type="button" class="btn btn-success" onclick="abrirModal(null)">Crear Nuevo</button>
            </div>
        </div>

        <hr />

        <table id="tabla" class="display cell-border" style="width:100%">
            <thead>
                <tr>
                    <th>Codigo de cupon</th>
                    <th>Tipo de descuento</th>
                    <th>Porcentaje de descuento</th>
                    <th>Monto de descuento</th>
                    <th>Cantidad</th>
                    <th>Fecha vencimiento</th>
                    <th>Activo</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="FormModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="exampleModalLabel">Cupon</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body ">

                <input id="txtid" type="hidden" value="0" />

                <form id="contenedor" class="row">
                    <div class="col-sm-3">
                        <div class="mb-3">
                            <label class="form-label">Codigo de cupon</label>
                            <input type="text" class="form-control" id="txtcodigo" name="codigocupon" autocomplete="off" />
                        </div>
                    </div>

                    <div class="col-sm-3">
                        <div class="mb-3">
                            <label class="form-label">Tipo de descuento</label>
                            <select id="cbotipo" class="form-select">
                                <option value="PORCENTAJE">PORCENTAJE</option>
                                <option value="MONTO">MONTO</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Porcentaje de descuento</label>
                            <input type="number" class="form-control" id="txtporcentaje" name="porcentaje" autocomplete="off"/>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Monto de descuento</label>
                            <input type="number" class="form-control" id="txtmonto" name="Monto" autocomplete="off" />
                        </div>
                    </div>

                    <div class="col-sm-3">
                        <div class="mb-3">
                            <label class="form-label">Cantidad</label>
                            <input type="number" class="form-control" id="txtcantidad" name="cantidadme" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Fecha de vencimiento</label>
                            <input type="date" class="form-control" id="txtfechaven" name="fechaven" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Activo</label>
                            <select id="cboactivo" class="form-select">
                                <option value="1">Si</option>
                                <option value="0">No</option>
                            </select>
                        </div>
                    </div>
                </form>



                <!--Alerta-->
                <div class="row mt-2">
                    <div class="col-12">
                        <div id="mensajeError" class="alert alert-danger" role="alert">
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="submit" class="btn btn-primary" onclick="Guardar()">Guardar</button>
            </div>
        </div>
    </div>
</div>



