@section scripts{
    <script>

        var tabladata;
        var filaSeleccionada;


        tabladata = $("#tabla").DataTable({
            responsive: true,
            ordering: true,
            "ajax": {
                url: '@Url.Action("ListarCupones", "Mantenedor")',
                type: "GET",
                datatype: "json"
            },
            "columns": [
                { "data": "Codigo_cupon" },
                { "data": "TipoDescuento" },
                { "data": "Porcentaje_desc_cup" },
                { "data": "Monto_desc_cup" },
                { "data": "Cantidad_cup" },
                {
                    "data": "Fecha_Vencimiento",
                    "render": function (data) {
                        var fecha = new Date(parseInt(data.substr(6)));
                        return fecha.toLocaleDateString("es-AR");
                    }
                },
                {
                    "data": "Activo", "render": function (valor) {
                        if (valor) {
                            return '<span class="badge bg-success">Si</span>'
                        } else {
                            return '<span class="badge bg-danger">No</span>'
                        }
                    }
                },
                {
                    "defaultContent": '<button type="button" class="btn btn-primary btn-sm btn-editar"><i class="fas fa-pen"></i></button>' +
                        '<button type="button" class="btn btn-danger btn-sm ms-2 btn-eliminar"><i class="fas fa-trash"></i></button>',
                    "orderable": false,
                    "searchable": false,
                    "width":"90px"
                }
            ],
            "language": {
                url: '//cdn.datatables.net/plug-ins/2.1.8/i18n/es-ES.json',
            }
        });


        $.validator.addMethod("fechaValida", function (value, element) {
            return /^\d{4}-\d{2}-\d{2}$/.test(value);
        }, "Debe ingresar una fecha válida en formato YYYY-MM-DD");



        $("#contenedor").validate({
            rules: {
                codigocupon: {
                    required: true
                },
                porcentaje: {
                    required: true,
                    number: true
                },
                Monto: {
                    required: true,
                    number: true
                },
                cantidadme: {
                    required: true,
                    number: true
                },
                fechaven: {
                    required: true,
                    fechaValida: true
                }
            },
            messages: {
                codigocupon: "- El campo código del cupón es obligatorio",
                porcentaje: {
                    required: "- El campo porcentaje es obligatorio",
                    number: "- Ingrese un valor numérico válido"
                },
                Monto: {
                    required: "- El campo monto es obligatorio",
                    number: "- Ingrese un valor numérico válido"
                },
                cantidadme: {
                    required: "- El campo cantidad es obligatorio",
                    number: "- Ingrese un número válido"
                },
                fechaven: {
                    required: "- La fecha de vencimiento es obligatoria",
                    fechaValida: "- Ingrese una fecha válida (YYYY-MM-DD)"
                }
            },
            errorElement: "div",
            errorLabelContainer: ".alert-danger"
        });




        function abrirModal(json) {

            $("#txtid").val(0);
            $("#txtcodigo").val("");
            $("#cbotipo").val($("#cbotipo option:first").val());
            $("#txtporcentaje").val("");
            $("#txtmonto").val("");
            $("#txtcantidad").val("");
            $("#cboactivo").val(1);
            $("#txtfechaven").val("");
            $("#mensajeError").hide();



            if (json != null) {
                $("#txtid").val(json.IdCupones);
                $("#txtcodigo").val(json.Codigo_cupon);
                $("#cbotipo").val(json.TipoDescuento);
                $("#txtporcentaje").val(json.Porcentaje_desc_cup);
                $("#txtmonto").val(json.Monto_desc_cup);
                $("#txtcantidad").val(json.Cantidad_cup);
                if (json.Fecha_Vencimiento) {
                    let timestamp = parseInt(json.Fecha_Vencimiento.substr(6)); // extrae número de /Date(...)
                    let fecha = new Date(timestamp);

                    let yyyy = fecha.getFullYear();
                    let mm = ("0" + (fecha.getMonth() + 1)).slice(-2); // Mes empieza en 0
                    let dd = ("0" + fecha.getDate()).slice(-2);

                    let fechaFormateada = `${yyyy}-${mm}-${dd}`; // formato YYYY-MM-DD

                    $("#txtfechaven").val(fechaFormateada);
                }
                $("#cboactivo").val(json.Activo == true ? 1 : 0);
            }

            $("#FormModal").modal("show");
        }

        $("#tabla tbody").on("click", ".btn-editar", function () {

            filaSeleccionada = $(this).closest("tr");

            var data = tabladata.row(filaSeleccionada).data();

            abrirModal(data)
        })

        $("#tabla tbody").on("click", ".btn-eliminar", function () {

            var cuponseleccionado = $(this).closest("tr");

            var data = tabladata.row(cuponseleccionado).data();

            swal({
                title: "Esta Seguro?",
                text: "¿Desea eliminar el cupon?",
                type: "warning",
                showCancelButton: true,
                confirmButtonClass: "btn-primary",
                confirmButtonText: "Si",
                cancelButtonText: "No",
                closeOnConfirm: true
            },
                function () {

                    jQuery.ajax({
                        url: '@Url.Action("EliminarCupon", "Mantenedor")',
                        type: "POST",
                        data: JSON.stringify({ id: data.IdCupones }),
                        contentType: "application/json; charset=utf-8",
                        success: function (data) {
                            if (data.resultado) {
                                tabladata.row(cuponseleccionado).remove().draw();
                            } else {
                                swal("No se pudo eliminar", data.mensaje, "error")
                            }
                        },
                        error: function (error) {
                            console.log(error)
                        }
                    });
            });
        })

        function Guardar() {

            if (!$("#txtfechaven").val()) {
                const hoy = new Date();
                hoy.setDate(hoy.getDate() - 1); 

                const ayer = hoy.toISOString().split('T')[0]; 

                $("#txtfechaven").val(ayer);
            }



            if (!$("#txtcantidad").val()) {
                $("#txtcantidad").val(0);
            }
            var Cupones = {

                IdCupones: $("#txtid").val(),
                Codigo_cupon: $("#txtcodigo").val(),
                TipoDescuento: $("#cbotipo").val(),
                Porcentaje_desc_cup: $("#txtporcentaje").val() || 0,
                Monto_desc_cup: $("#txtmonto").val() || 0,
                Cantidad_cup: $("#txtcantidad").val(),
                Fecha_Vencimiento: $("#txtfechaven").val(),
                Activo: $("#cboactivo").val() == 1 ? true : false,

            }


            var request = new FormData();
            request.append("objeto", JSON.stringify(Cupones))

            jQuery.ajax({
                url: '@Url.Action("GuardarCupon","Mantenedor")',
                type: "POST",
                data: request,
                processData: false,
                contentType: false,
                success: function (data) {

                    $(".modal-body").LoadingOverlay("hide");
                    // PRODUCTO NUEVO
                    if (Cupones.IdCupones == 0) {

                        if (data.idGenerado != 0) {

                            Cupones.IdCupones = data.idGenerado;
                            tabladata.row.add(Cupones).draw(false);
                            $("#FormModal").modal("hide");
                            tabladata.ajax.reload(null, false);
                        } else {
                            $("#mensajeError").text(data.mensaje);
                            $("#mensajeError").show();
                        }
                    // PRODUCTO EDITAR
                    } else {

                        if (data.operacionExitosa) {
                            tabladata.row(filaSeleccionada).data(Cupones).draw(false);
                            filaSeleccionada = null;
                            $("#FormModal").modal("hide");
                            tabladata.ajax.reload(null, false);

                        } else {
                            $("#mensajeError").text(data.mensaje);
                            $("#mensajeError").show();
                        }
                    }
                },
                error: function (error) {

                    $(".modal-body").LoadingOverlay("hide");
                    $("#mensajeError").text("Error Ajax");
                    $("#mensajeError").show();
                },
                beforeSend: function () {
                    $(".modal-body").LoadingOverlay("show", {
                        imageResizeFactor: 2,
                        text: "Cargando...",
                        size: 14
                    });
                }
            });


        }

        function actualizarCamposDescuento() {
            var tipo = $("#cbotipo").val();

            $("#txtporcentaje").prop("disabled", false);
            $("#txtmonto").prop("disabled", true).val(0)

            if (tipo === "PORCENTAJE") {
                $("#txtporcentaje").prop("disabled", false);
                $("#txtmonto").prop("disabled", true).val(0); // Limpia monto
            } else if (tipo === "MONTO") {
                $("#txtporcentaje").prop("disabled", true).val(0); // Limpia porcentaje
                $("#txtmonto").prop("disabled", false);
            }
        }

        $(document).ready(function () {
            actualizarCamposDescuento();

            $("#cbotipo").change(function () {
                actualizarCamposDescuento();
            });
        });


        //PROMOCIONES
         var tabladata2;
         var filaSeleccionada2;


         tabladata2 = $("#tabla2").DataTable({
             responsive: true,
             ordering: true,
             "ajax": {
